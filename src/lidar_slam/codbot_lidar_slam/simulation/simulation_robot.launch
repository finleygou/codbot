<launch>

    <!--  ************** Global Parameters ***************  -->
    <param name="/use_sim_time" value="true"/>

    <!--  ************** Stage Simulator ***************  -->
    <node pkg="stage_ros" type="stageros" name="stageros" args="$(find codbot_lidar_slam)/simulation/stage/$(env BASE_TYPE)/maze.world">
        <param name="base_watchdog_timeout" value="0.5"/>
        <remap from="base_scan" to="scan"/>
        <remap from="odom" to="odom"/>
    </node>

</launch>
